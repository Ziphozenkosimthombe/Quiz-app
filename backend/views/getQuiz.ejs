<%- include('partials/header') -%>
<body>
    <h1>Hello Quiz</h1>
    <% quiz.map(function(q) { %>
        <% if(q.topic == "Maths") { %>
            <h2><%= q.topic %></h2>
            <div class="flex flex-col items-center justify-center min-w-96 mx-auto h-screen">
                <div class=" p-6 rounded-lg shadow-md bg-gray-400 bg-clip-padding backdrop-filter backdrop-blur-lg bg-opacity-0">
                    <h2><%= q.questions[0].questionText%></h2>
                    <div class="w-80 mt-10">
                        <label class="input input-bordered flex items-center gap-2">
                            <input type="radio" name="answer" value="1" />
                            <span><%= q.questions[0].answers[0] %></span>
                        </label>
                        <label class="input input-bordered flex items-center gap-2">
                            <input type="radio" name="answer" value="2" />
                            <span><%= q.questions[0].answers[1]%></span>
                        </label>
                        <label class="input input-bordered flex items-center gap-2">
                            <input type="radio" name="answer" value="3" />
                            <span><%= q.questions[0].answers[2] %></span>
                        </label>
                        <label class="input input-bordered flex items-center gap-2">
                            <input type="radio" name="answer" value="4" />
                            <span><%= q.questions[0].answers[3] %></span>
                        </label>
                    </div>
                </div>
            </div>
        <%} %>
    <%}) %>
    
</body>